#include "tegra234-orin-agx-cti-base.dtsi"

/{
    nvidia,dtsfilename = "tegra234-orin-agx-cti-AGX920.dts";

    //I2C5
    i2c@31e0000{
        status = "okay";
        ptn5150@3d{
            reg = <0x3d>;
            compatible = "cti,ptn5150";
            status = "okay";
            interrupt-parent = <&tegra_main_gpio>;
            interrupts = <TEGRA234_MAIN_GPIO(Q, 4) IRQ_TYPE_LEVEL_LOW>;

            connector@0 {
                compatible = "usb-c-connector";
                label = "USB-C";
                data-role = "dual";
                //Supported opmodes: "default" (900mA), "1.5A", "3.0A"
                power-opmode = "1.5A";
                port {
                    ptn5150_typec0_ep: endpoint {
                        remote-endpoint = <&usb_role_switch0>;
                    };
                };
            };
        };
    };

    pps {
	    compatible = "pps-gpio";
		status = "okay";
        gpios = <&tegra_main_gpio TEGRA234_MAIN_GPIO(N, 1) 0>;
	};

    display@13800000 {
        status = "okay";
    };

    //1G
    ethernet@2310000 {
        status = "disabled";
    };

    xusb_padctl@3520000 {
        status = "okay";
        pads {
            usb2 {
                lanes {
                    usb2-0 {
                        status = "okay";
                    };
                    usb2-1 {
                        status = "okay";
                    };
                    usb2-2 {
                        status = "okay";
                    };
                    usb2-3 {
                        status = "okay";
                    };
                };
            };
            usb3 {
                lanes {
                    usb3-0 {
                        status = "disabled";
                    };
                    usb3-1 {
                        status = "okay";
                    };
                    usb3-2 {
                        status = "disabled";
                    };
                    usb3-3 {
                        status = "disabled";
                    };
                };
            };
        };
        ports {
            usb2-0 {
                mode = "otg";
                usb-role-switch;
                status = "okay";
                port {
                    usb_role_switch0: endpoint {
                        remote-endpoint = <&ptn5150_typec0_ep>;
                    };
                };
            };
            usb2-1 {
                mode = "host";
                status = "okay";
            };
            usb2-2 {
                mode = "host";
                status = "okay";
            };
            usb2-3 {
                mode = "host";
                status = "okay";
            };

            usb3-0 {
                status = "disabled";
            };
            usb3-1 {
                nvidia,usb2-companion = <0>;
                status = "okay";
            };
            usb3-2 {
                status = "disabled";
            };
            usb3-3 {
                status = "disabled";
            };
        };
    };

    xudc@3550000 {
        status = "okay";
        phys =  <&{/xusb_padctl@3520000/pads/usb2/lanes/usb2-0}>,
                <&{/xusb_padctl@3520000/pads/usb3/lanes/usb3-1}>;
        phy-names = "usb2-0", "usb3-1";
    };

    xhci@3610000 {
        status = "okay";
        phys =  <&{/xusb_padctl@3520000/pads/usb2/lanes/usb2-0}>,
                <&{/xusb_padctl@3520000/pads/usb2/lanes/usb2-1}>,
                <&{/xusb_padctl@3520000/pads/usb2/lanes/usb2-2}>,
                <&{/xusb_padctl@3520000/pads/usb2/lanes/usb2-3}>,
                <&{/xusb_padctl@3520000/pads/usb3/lanes/usb3-1}>;
        phy-names = "usb2-0", "usb2-1", "usb2-2", "usb2-3",
                    "usb3-1";
    };


    //PCIe C0
    pcie@14180000 {
        status = "okay";
        num-lanes = <1>;
        phys = <&p2u_hsio_0>;
        phy-names = "p2u-0";
    };

    //PCIe C1
    pcie@14100000 {
        status = "okay";
        num-lanes = <1>;
        phys = <&p2u_hsio_3>;
        phy-names = "p2u-0";
    };

    //PCIe C4
    pcie@14160000 {
        status = "disabled";
        num-lanes = <4>;
        phys = <&p2u_hsio_4>, <&p2u_hsio_5>, <&p2u_hsio_6>, <&p2u_hsio_7>;
        phy-names = "p2u-0", "p2u-1", "p2u-2", "p2u-3";
    };

    //PCIe C5
    pcie@141a0000 {
        status = "okay";
        num-lanes = <4>;
        phys = <&p2u_nvhs_0>, <&p2u_nvhs_1>, <&p2u_nvhs_2>, <&p2u_nvhs_3>;
        phy-names = "p2u-0", "p2u-1", "p2u-2", "p2u-3";
    };

    pcie_ep@141a0000 {
        status = "disabled";
        num-lanes = <4>;
        phys = <&p2u_nvhs_0>, <&p2u_nvhs_1>, <&p2u_nvhs_2>, <&p2u_nvhs_3>;
        phy-names = "p2u-0", "p2u-1", "p2u-2", "p2u-3";
    };

    //PCIe C6
    pcie@141c0000{
        status = "okay";
        num-lanes = <2>;
        phys = <&p2u_nvhs_4>, <&p2u_nvhs_5>;
        phy-names = "p2u-0", "p2u-1";
    };

    //PCIe C7
    pcie@141e0000 {
        status = "okay";
        num-lanes = <4>;
        phys = <&p2u_gbe_0>, <&p2u_gbe_1>, <&p2u_gbe_2>, <&p2u_gbe_3>;
        phy-names = "p2u-0", "p2u-1", "p2u-2", "p2u-3";
    };

};

