/* camera control gpio definitions */

#include <dt-bindings/media/camera.h>
#include "tegra194-cti-camera-1cam-vi-csi-base.dtsi"
#include "tegra194-cti-camera-1cam-platform-base.dtsi"

/ {
	I2C_ADDR {
					I2C0_NODE {
						compatible = COMPATIBLE_STRING;
						reg = <I2C_NODE_REG>;
						devnode = "video0";																						
						sensor_model = SENSOR_MODEL;
						status = "okay";

						mode0 { 						
							num_lanes = NUM_OF_LANES;
							tegra_sinterface = I2C0_NODE_SINTERFACE;
							SENSOR_MODE0
						};						
						ports {
							#address-cells = <1>;
							#size-cells = <0>;

							port@0 {
								reg = <0>;
								vi_out0: endpoint {
									port-index = <VI_CSI_PORT_INDEX0>;
									bus-width = <BUS_WIDTH>;
									remote-endpoint = <&csi_in0>;
								};
							};
						};
					};
};

